                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
        <div class="row mb-2">
            <div class="col-12">
                <a href="@Url.Action("NuevoPedido","Pedidos")" class="btn btn-primary">Nuevo pedido</a>
                <a href="#" class="btn btn-success"> <i class="fas fa-file-excel"></i> &nbsp; Importar desde Excel</a>
            </div>
        </div>


    </div><!-- /.container-fluid -->
</section>

