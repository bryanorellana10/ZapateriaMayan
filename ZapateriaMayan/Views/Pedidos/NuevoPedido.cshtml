                            for (var i = 0; i < result; i++) {
                                $('#detallesolicitud').append("<tr>"
                                    + "<td>" + data[0] + "</td>"
                                    + "<td>" + data[2] + "</td>"
                                    + "<td>" + data[3].text() + "</td>"
                                    + "<td style='display: none;'>" + data[3].val() + "</td>"
                                    + "<td>" + data[6] + "</td>"
