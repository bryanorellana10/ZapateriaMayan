        $(".agregarDetallePedido").click(function (e) {
            e.preventDefault();


            var parent = $(this).parent().parent()
            var child = parent.children('td');
            var i = 0;

            var data = new Array();

            child.each(function () {

                switch (i) {
                    case 0:
                        data[0] = $(this).text();
                        break;
                    case 2: parent
                        data[2] = $(this).text();

                        break;

                    case 3:
                        var selecteds = $(this).children('select#cars').children("option").filter(":selected");
                        data[3] = selecteds;

                        break;

