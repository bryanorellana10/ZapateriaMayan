@model ZapateriaMayan.ViewModels.ProductoViewModel


@Html.HiddenFor(m => m.Producto.FechaCreacion)
@Html.HiddenFor(m => m.Producto.Estado)

@*@Html.ValidationSummary(false, "", new { @class = "text-danger" })*@

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-teal">
                    <div class="card-header">
                        <h3 class="card-title">Nuevo Producto</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->


                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Nombre del Producto</label>
                                    @Html.TextBoxFor(m => m.Producto.NombreProducto, new { @class = "form-control", @placeholder = "Nombre Producto" })
                                    @Html.ValidationMessageFor(m => m.Producto.NombreProducto, "", new { @class = "text-danger" })
                                    @*<input class="form-control" placeholder="NombreProducto">*@
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Precio</label>
                                    @Html.TextBoxFor(m => m.Producto.Precio, new { @class = "form-control", @placeholder = "Precio" })
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Precio Mayorista</label>
                                    @Html.TextBoxFor(m => m.Producto.PrecioOferta, new { @class = "form-control", @placeholder = "Precio Oferta" })
                                    @Html.ValidationMessageFor(m => m.Producto.PrecioOferta, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label>Observaciones</label>
                                    @Html.TextAreaFor(m => m.Producto.Observaciones, new { @class = "form-control", @placeholder = "Observaciones" })
                                </div>
                            </div>


                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label> Categorias</label>
                                    @Html.DropDownListFor(m => m.Producto.CategoriaId, Model.ListaCategorias, "Seleccione", new { @class = "form-control select2" })
                                </div>
                            </div>
                            <div class="col-sm-2" style="margin-top: 9px;">
                                <div class="form-group">
                                    <label></label>
                                    <button style="display:block" type="button" data-toggle="modal" data-target="#exampleModalLong" class="btn btn-primary">Agregar Categoria</button>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Sub-Categoria</label>
                                    @Html.TextBoxFor(m => m.Producto.Categoria1, new { @class = "form-control", @placeholder = "Modelo" })
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Especificación</label>
                                    @Html.TextBoxFor(m => m.Producto.Categoria2, new { @class = "form-control", @placeholder = "Sub-Categoria" })
                                </div>
                            </div>
                        </div>

                        <div class="row">

                            <div class="col-sm-12">

                                <div class="form-group">
                                    <label for="exampleInputFile">Imagen</label>
                                    <div class="input-group">
                                        <div class="custom-file">
                                            <input type="file" id="file" name="Image" class="custom-file-input" multiple onchange="GetFileSize()" />
                                            @*<input type="file" class="custom-file-input" id="exampleInputFile">*@
                                            <label class="custom-file-label" for="exampleInputFile">Elija Imagen</label>

                                        </div>
                                        @*<div class="input-group-append">
                                            <span class="input-group-text" id="">Upload</span>
                                            </div>*@
                                    </div>
                                    @Html.ValidationMessageFor(m => m.Image, "", new { @class = "text-danger" })

                                    <div class="col-2">
                                        <p>Tamaño de Imagen</p>
                                    </div>
                                </div>
                                <div class="col-2">
                                    <p id="fp"> </p>
                                </div>


                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                        <a href="@Url.Action("Productos", "Inventario")" class="btn btn-outline-danger">Cancelar</a>
                    </div>




                    <!-- Modal -->
                    <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLongTitle">Agregar Categoria</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>

                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-sm-2">
                                            <div class="form-group">
                                                <label> Id </label>
                                                <input id="IdCategory" class="form-control" type="text" />
                                            </div>
                                        </div>

                                        <div class="col-sm-10">
                                            <div class="form-group">
                                                <label> Nombre de la categoria</label>
                                                <input id="nameCategory" class="form-control" type="text" />
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                                    <button type="button" class="btn btn-primary" id="agregarCategoria">Agregar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
<script src="~/Scripts/bs-custom-file-input.min.js"></script>




